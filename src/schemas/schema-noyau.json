{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema-noyau.json",
  "definitions": {
    "thread": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "participants": { 
          "type": "array", 
          "items": { "type": "string" }, 
          "minItems": 1, 
          "maxItems": 2 
        },
        "createdAt": { 
          "type": "string", 
          "format": "date-time" 
        },
        "categories": { 
          "type": "array", 
          "items": { "type": "string" } 
        }
      },
      "required": ["title", "createdAt"]
    },
    "message": {
      "type": "object",
      "properties": {
        "sender": { "type": "string" },
        "sentAt": { 
          "type": "string", 
          "format": "date-time" 
        }
      },
      "required": ["sender", "sentAt"]
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "checkbox": {
      "type": "boolean",
      "const": true
    },
    "multipleChoiceOption": {
      "type": "string",
      "enum": ["option 1", "option 2"]
    },
    "multipleChoiceFPSMode": {
      "type": "string",
      "enum": ["Deathmatch", "Battle Royal", "Capture the Flag"]
    },
    "dateTime": {
      "type": "string",
      "format": "date-time",
      "description": "Date au format ISO 8601 (YYYY-MM-DDTHH:MM:SSZ)"
    },
    "number": {
      "type": "number",
      "minimum": 0
    }
  }
}