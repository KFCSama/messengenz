{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema-fps-mode.json",
  "type": "object",
  "required": ["questionText", "date"],
  "properties": {
    "questionText": {
      "$ref": "#/definitions/textField"
    },
    "date": {
      "$ref": "#/definitions/date"
    }
  },
  "definitions": {
    "textField": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "Date au format ISO 8601 (YYYY-MM-DDTHH:MM:SSZ)"
    },
    "mode": {
      "type": "string",
      "enum": ["Deathmatch", "Battle Royal", "Capture the Flag"]
    }
  }
}